{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@workspace/ui/*": ["./src/*"]
		},
		"outDir": "./dist",
		"types": ["bun"],
		"jsx": "react-jsx"
	},
	"tsc-alias": {
		"resolveFullPaths": true
	},
}
